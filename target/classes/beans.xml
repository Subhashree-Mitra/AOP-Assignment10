<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="stu" class="org.antwalk.Student">
		<property name="name" value="Subhashree Mitra" />
		<property name="engMarks" value="94" />
		<property name="hindiMarks" value="88" />
		<property name="mathMarks" value="99" />
	</bean>
	
	<bean id="before" class="org.antwalk.BeforeMethod" />
	<bean id="beforeProxy"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="stu" />
		<property name="interceptorNames">
			<list>
				<value>before</value>
			</list>
		</property>
	</bean>
	
	<bean id="after" class="org.antwalk.AfterMethod" />
	<bean id="afterProxy"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="stu" />
		<property name="interceptorNames">
			<list>
				<value>after</value>
			</list>
		</property>
	</bean>

</beans>   